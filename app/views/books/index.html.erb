<table class="table table-dark">
<% @books.each do |book| %>
<tr>
	<td><%= book.title %></td>
	<td><%= book.body %></td>
	<td><%= book.tag_list %></td>
	<td><div><%= book.rate %>点</div></td>
	<td><div id="star-rate-<%= book.id %>"></div></td>
		<script>
          $("#star-rate-<%= book.id %>").raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            readOnly: true,
            score: <%= book.rate %>,
        });
    	</script>
</tr>
<% end %>
</table>
<%= link_to "新規作成", new_book_path %>